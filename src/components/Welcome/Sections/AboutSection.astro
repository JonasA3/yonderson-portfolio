---
import { t } from '../../../Content/translations';
import CvSection from '../SectionWrapper.astro';
import { classes } from '../../../styles/tailwindClassNames';
import { cn } from '../../../utils/cn';

const lang = (Astro.cookies.get('lang')?.value as 'en' | 'sv') ?? 'en';
const { about } = t[lang].cvContent;
const { aboutMeTitle } = t[lang].sectionTitles;
---

<CvSection id="about" title={aboutMeTitle} border={true} scroll={false}>
  <div class="flex flex-col md:flex-row items-center gap-4 md:gap-8 max-w-full">
    <img
      src="/publicAssets/profile.png"
      alt="Portrait of Jonas Andersson"
      class="md:rounded-xl rounded-full w-32 h-32 md:w-40 md:h-40 object-cover object-top border-gray-400 border-2"
    />
    <p class={cn(classes.text.paragraph)}>
      {about}
    </p>
  </div>
</CvSection>
