---
const { id, title, border } = Astro.props;
---

<section
  id={id}
  class="snap-start h-screen flex flex-col justify-center items-center text-center p-8 max-w-[800px] mx-auto"
>
  {title && <h2 class="text-4xl font-logo mb-4">{title}</h2>}
  {
    border ? (
      <div class="border-b-4 border-t-4 border-gray-300 w-full mb-4 p-8 flex flex-col items-center">
        <slot />
      </div>
    ) : (
      <div class="w-full mb-4 p-8 flex flex-col items-center">
        <slot />
      </div>
    )
  }
</section>
